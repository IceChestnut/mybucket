{
    "description": "同步 MaaAssistantArknights 中与 MaaCore 版本无关，需要动态更新的文件",
    "homepage": "https://github.com/MaaAssistantArknights/MaaResource",
    "license": "AGPL-3.0",
    "version": "0.2024.10.29",
    "url": "https://github.com/MaaAssistantArknights/MaaResource/archive/refs/heads/main.zip",
    "extract_dir": "MaaResource-main",
    "installer": {
        "script": [
            "$MaaDir = $(appdir maa $global)",
            "if (Test-Path \"$MaaDir\") {",
            "    Get-ChildItem -Path \"$MaaDir\\current\" -Filter \"cache\" | Remove-Item -Force -Recurse",
            "    Get-ChildItem -Path \"$MaaDir\\current\" -Filter \"resource\" | Remove-Item -Force -Recurse",
            "    New-Item \"$MaaDir\\current\\cache\" -ItemType Junction -Target \"$dir\\cache\" | Out-Null",
            "    New-Item \"$MaaDir\\current\\resource\" -ItemType Junction -Target \"$dir\\resource\" | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$MaaDir = $(appdir maa $global)",
            "if (Test-Path \"$MaaDir\") {",
            "    Get-ChildItem -Path \"$FoobarDir\\current\" -Filter \"cache\" | Remove-Item -Force -Recurse",
            "    Get-ChildItem -Path \"$FoobarDir\\current\" -Filter \"resource\" | Remove-Item -Force -Recurse",
            "}"
        ]
    },
    "checkver": {
        "url": "https://github.com/MaaAssistantArknights/MaaResource/commits/main.atom",
        "regex": "(?s)>(\\d+)-(\\d+)-(\\d+)T.*?/(?<sha>[0-9a-f]{40})",
        "replace": "0.${1}.${2}.${3}"
    },
    "autoupdate": {
        "url": "https://github.com/MaaAssistantArknights/MaaResource/archive/refs/heads/main.zip",
        "extract_dir": "MaaResource-main"
    }
}
